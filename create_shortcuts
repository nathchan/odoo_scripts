echo "This program creates 3 usefull shortcuts for Odoo admins"

echo "Creates 'ol' that is used to show logs from Odoo"
echo "sudo tail -f /var/log/odoo/odoo-server.log" > /bin/ol
chmod +x /bin/ol

echo "Creates 'or' that is used to restart Odoo"
echo "sudo service odoo restart" > /bin/or
chmod +x /bin/or

echo "Creates 'orl' that restarts AND show logs from Odoo"
echo "or & ol" > /bin/orl
chmod +x /bin/orl
